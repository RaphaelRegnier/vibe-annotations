{
  "manifest_version": 3,
  "name": "Vibe Annotations",
  "version": "1.0.0",
  "description": "AI-powered development annotations for localhost projects and local HTML files",
  "author": "Raphael Regnier - Spellbind Creative Studio",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://0.0.0.0/*",
    "file:///*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Vibe Annotations"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*", 
        "http://0.0.0.0/*",
        "file:///*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/fonts/InterVariable.woff2"],
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*", 
        "http://0.0.0.0/*",
        "file:///*"
      ]
    }
  ]
}
