{
  "manifest_version": 3,
  "name": "Vibe Annotations",
  "version": "1.1.0",
  "description": "AI-powered development annotations for local development projects and HTML files",
  "author": "Raphael Regnier - Spellbind Creative Studio",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "http://0.0.0.0/*",
    "https://0.0.0.0/*",
    "http://*.local/*",
    "https://*.local/*",
    "http://*.test/*",
    "https://*.test/*",
    "http://*.localhost/*",
    "https://*.localhost/*",
    "file:///*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_title": "Vibe Annotations"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*", 
        "http://0.0.0.0/*",
        "https://0.0.0.0/*",
        "http://*.local/*",
        "https://*.local/*",
        "http://*.test/*",
        "https://*.test/*",
        "http://*.localhost/*",
        "https://*.localhost/*",
        "file:///*"
      ],
      "js": [
        "content/modules/event-bus.js",
        "content/modules/styles.js",
        "content/modules/shadow-host.js",
        "content/modules/theme-manager.js",
        "content/modules/api-bridge.js",
        "content/modules/element-context.js",
        "content/modules/badge-manager.js",
        "content/modules/inspection-mode.js",
        "content/modules/annotation-popover.js",
        "content/modules/floating-toolbar.js",
        "content/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/fonts/InterVariable.woff2", "assets/icons/icon-hq.png"],
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*", 
        "http://0.0.0.0/*",
        "https://0.0.0.0/*",
        "http://*.local/*",
        "https://*.local/*",
        "http://*.test/*",
        "https://*.test/*",
        "http://*.localhost/*",
        "https://*.localhost/*",
        "file:///*"
      ]
    }
  ]
}
